@using CI_Platform_Project.Models
@model AdminZm
@{
    ViewData["Title"] = "Story";
    Layout = "~/Areas/Admin/Views/Pages/_Layout.cshtml";
}

<button class="mision-border  p-2" style="background-color: white;"><span style="font-size: 22px;color: #414141">Mission Application</span></button>



<hr class="m-0 mb-4">
<table id="datatable" class="table row-border" style="width:100%">
    <thead>
        <tr>
            <th>Story Title</th>
            @*<th>Mission Title</th>*@
            <th>User Full Name</th>
            <th>Status</th>
            <th>
                Action
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.stories)
        {
            <tr>
                <td>@obj.Title</td>
                @*<td>@obj.Mission.Title</td>*@
                <td>@obj.User.FirstName &nbsp; @obj.User.LastName</td>
                <td>
                    @(obj.Status == 1 ? "Publish" : "Decline")
                </td>
                <td>
                <form method="post">
                   @* <button type="submit" asp-area="Admin" asp-controller="Admin" asp-action="StoryDetail" asp-route-id="@obj.StoryId">
                        <i class="bi bi-check-circle text-success" style="color:#f88634;"></i>
                    </button>*@
                    &nbsp;
                    <a asp-area="Admin" asp-controller="Admin" asp-action="StoryPublish" asp-route-id="@obj.StoryId"><i class="bi bi-check-circle text-success" style="color:#f88634;"></i></a>
                    &nbsp;
                    <button type="submit" asp-area="Admin" asp-controller="Admin" asp-action="StoryDecline" asp-route-id=@obj.StoryId onclick="confirm('Are You Want to Delete?')" role="button" class="btn p-0" data-bs-toggle="modal">
                        <i class="bi bi-x-circle text-danger text-end"></i>
                    </button>
                    &nbsp;
                    <button type="submit" asp-area="Admin" asp-controller="Admin" asp-action="DeleteStory" asp-route-id=@obj.StoryId onclick="confirm('Are You Want to Delete?')" role="button" class="btn p-0" data-bs-toggle="modal">
                        <i class="bi bi-trash text-end"></i>
                    </button>
                </form>
                </td>

            </tr>
        }
    </tbody>

</table>









<script>
    $(document).ready(function() {
        $('#datatable').DataTable();
        $('#example1').DataTable();


    });
</script>

