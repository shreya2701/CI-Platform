
@model IEnumerable<StoryCard>





<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 pt-5">
    @foreach (var obj in Model)
    {
        <div class="col mb-4">
            <div class="card h-100 cardcontainer">
                <div class="photo">
                    <img src="@Url.Content(@obj.img)" class="card-img-top w-100" height="200px" alt="...">
                    <div class="overlay">
                        <a class="info" asp-area="Customer" asp-controller="Home" asp-action="StoryDetail" asp-route-id="@obj.Stories.StoryId">View Details<i class="bi bi-arrow-right ms-2"></i></a>
                    </div>
                </div>
                <div class="box1">
                    <span class="mb-30 text-wrap btn btn-sm rounded-pill "
                      style="background-color: white; color: #757575; ">
                        @obj.theme 
                    </span>
                </div>
                <div class="card-body">
                    <h5 class="card-title">@obj.Stories.Title</h5>
                    <p class="card-text">@obj.Stories.Description</p>
                </div>
                <div class="margin d-flex align-items-center mb-2 ">
                    <img src="@Url.Content(@obj.UserImg)" class="rounded-circle"
                     alt="Avatar" width="40px" height="40px" />&nbsp;&nbsp;
                    <div class="flex-column">
                        <p class="mb-0 text0">@obj.UserName</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
