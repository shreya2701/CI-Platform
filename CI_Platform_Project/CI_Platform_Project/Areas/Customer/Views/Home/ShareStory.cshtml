@using CI_Platform_Project.DataModels
@model StoryZm
@{
    ViewData["Title"] = "ShareStory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{

    var userId = Context.Session.GetString("UserId");
    if (userId == null)
    {
        Context.Response.Redirect("https://localhost:7050");

    }
}

<hr class="m-0">
<div class="container">
    <div class="d-block">
        <p class="mt-4"><span class="share-story">Share Your Story</span></p>
    </div>
    <form class="row g-3" method="post" enctype="multipart/form-data" action="ShareStory">
        <div><input asp-for="@Model.story.UserId" hidden/></div>
        <input asp-for="@Model.story.StoryId" hidden/>
        <div class="col-md-4">
            <label for="inputState" asp-for="@Model.story.MissionId" class="form-label">Select Mission</label>
            <select id="inputState" class="form-select" asp-for="@Model.story.MissionId" asp-items="ViewBag.StoryList">
                <option selected disabled>Select Your Mission</option>
            </select>
        </div>
        <div class="col-md-4">
            <label for="name" asp-for="@Model.story.Title" class="form-label">My story Title</label>
            <input type="text" asp-for="@Model.story.Title" class="form-control" id="name" placeholder="Enter Syory Title ">
        </div>
        <div class="col-md-4">
            <label for="surname" asp-for="@Model.story.PublishAt" class="form-label">Date</label>
            <input type="date" asp-for="@Model.story.PublishAt" class="form-control" id="surname" placeholder="Select Date ">
        </div>
        <div class="col-12">
            <label for="myProfile" asp-for="@Model.story.Description" class="form-label">My Story</label>
            <textarea class="form-control" asp-for="@Model.story.Description" id="myProfile" rows="4" placeholder="Enter Story"></textarea>
        </div>
        <div class="col-md-12">
            <label for="name"  class="form-label"> Video URL</label>
            <input type="text" name="VideoUrl" class="form-control" placeholder="Enter Video URL">
        </div>
        <label for="inputState" class="form-label">Upload Your Photos</label>
        <div class="drag-area mt-0 mx-2" style="width: 99%;">
            <div class="icon"><i class="bi bi-plus-lg" style="color: grey;"></i></div>
            <button>Upload Image & Video Here</button>
            <input type="file" name="file" multiple>
        </div>
        <div class="row mt-4 mobile-view">
            <div class="col-md-1 col-sm-2">
                <img src="assets/img1.png" alt="Snow" style="width:90px;height: 90px;">
                <img src="assets/cancel1.png" class="cross">
            </div>
            <div class="col-md-1 ms-md-2 col-sm-2">
                <img src="assets/list-card-1.png" alt="Snow" style="width:90px;height: 90px;">
            </div>
            <div class="col-md-1 ms-md-2 col-sm-2">
                <img src="assets/img1.png" alt="Snow" style="width:90px;height: 90px;">
            </div>
            <div class="col-md-1 ms-md-2 col-sm-2">
                <img src="assets/img1.png" alt="Snow" style="width:90px;height: 90px;">
            </div>
            <div class="col-md-1 ms-md-2 col-sm-2">
                <img src="assets/img1.png" alt="Snow" style="width:90px;height: 90px;">
            </div>
            <div class="col-md-1 ms-md-2 col-sm-2">
                <img src="assets/img1.png" alt="Snow" style="width:90px;height: 90px;">
            </div>
            <div class="col-md-1 ms-md-2 col-sm-2 mt-sm-3 mt-md-0">
                <img src="assets/img1.png" alt="Snow" style="width:90px;height: 90px;">
            </div>
            <div class="col-md-1 ms-md-2 col-sm-2 mt-sm-3 mt-sm-3 mt-md-0">
                <img src="assets/img1.png" alt="Snow" style="width:90px;height: 90px;">
            </div>
            <div class="col-md-1 ms-md-2 col-sm-2 mt-sm-3 mt-md-0 ">
                <img src="assets/img1.png" alt="Snow" style="width:90px;height: 90px;">
            </div>
            <div class="col-md-1 ms-md-2 col-sm-2 mt-sm-3 mt-md-0">
                <img src="assets/img1.png" alt="Snow" style="width:90px;height: 90px;">
            </div>
            <div class="col-md-1 ms-md-2 col-sm-2 mt-sm-3 mt-md-0">
                <img src="assets/img1.png" alt="Snow" style="width:90px;height: 90px;">
            </div>
            <div class="col-md-1 col-sm-2 mt-md-3 mt-sm-3 ">
                <img src="assets/img1.png" alt="Snow" style="width:90px;height: 90px;">
            </div>
            <div class="col-md-1 col-sm-2 mt-md-3 ms-md-2 mt-sm-3 ">
                <img src="assets/img1.png" alt="Snow" style="width:90px;height: 90px;">
            </div>
        </div>



   
    <div class="d-flex justify-content-between mb-5">
        <div class="justify-content-start ">
            <button type="submit" asp-area="Customer" asp-controller="Home" asp-action="Story" class=" px-4  py-1 btn-block rounded-pill text1 " style="font-size: 17px;background-color: white;border: solid 2px #757575;">Cancel</button>
        </div>
        <div class="d-flex">
            <div class="justify-content-end ms-2">
                <button type="submit" class=" px-4 py-1 btn-block rounded-pill button " style="font-size: 17px;">Submit</button>
            </div>
        </div>

    </div>
     </form>
</div>

<hr />
<div class="container">
    <span class="my-4 d-flex">

        <a href="#modalCenter3" id="password" role="button" class="btn p-0" data-bs-toggle="modal">Contact Us</a>
        <p class="ms-3">Privacy Policy</p>
        <!-- Modal HTML -->
        <div id="modalCenter3" class="modal fade" tabindex="-1">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header border-bottom-0">
                        <h5 class="modal-title">Contact Us</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body pt-0">
                        <div class="col-md-12 mb-3">
                            <label for="name" class="form-label mb-0">Name</label>
                            <input type="text" class="form-control" id="name" placeholder="Enter your name">
                        </div>
                        <div class="col-md-12 mb-3">
                            <label for="name" class="form-label mb-0">Email Address</label>
                            <input type="text" class="form-control" id="name" placeholder="Enter your email">
                        </div>
                        <div class="col-md-12 mb-3">
                            <label for="name" class="form-label mb-0">Subject</label>
                            <input type="text" class="form-control" id="name" placeholder="Enter subject">
                        </div>
                        <div class="col-12">
                            <label for="myProfile" class="form-label mb-0">Message</label>
                            <textarea class="form-control" id="myProfile" rows="3" placeholder="Enter Message"></textarea>
