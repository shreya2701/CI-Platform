@using CI_Platform_Project.DataModels
@model Mission;

<div class="modal fade" id="CoWorker">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="modalForm" method="post" action="CoWorker">
                    <div class="form-group"><input asp-for="MissionId" type="text" hidden /></div>
                    <div class="form-group">
                        <label>Enter Email</label>
                        <input type="email" name="InviteEmail" class="form-control" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

                <button type="button" class="btn btn-primary" data-save="modal">Send</button>

            </div>
        </div>
    </div>
</div>
