@model Login
@{
    ViewData["Title"] = "Registration";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<div class="row h-100">
    <!-- #region Carousel -->
    <div class="col-md-12 col-sm-12 col-lg-8 h-100" style="padding: 0px;">

        <div id="carouselExampleCaptions" class="carousel slide h-100" data-bs-ride="false">

            <div class="carousel-indicators h-100">
                @{
                    var isButtonFirst = true;
                }
                @for (var i = 0; i < Model.banner.Count(); i++)
                {
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="@i"
                        class="@(isButtonFirst ? "active": "")" aria-current="true" aria-label="Slide @i"
                        style="height: 8px;width: 8px; border-radius: 10px;border: 0;"></button>
                    <span style="display:none">@(isButtonFirst = false)</span>
                }

            </div>

            <div class="carousel-inner h-100">

                @{
                    var isFirst = true; foreach (var item in Model.banner)
                    {
                        <div class="carousel-item h-100 @(isFirst ? "active": "")">

                            <img src="@Url.Content(@item.Image)"
                             class="d-block img img-fluid CorouselImg h-100" alt="...">
                            <span style="display:none">@(isFirst = false)</span>

                            <div class="carousel-caption d-none d-lg-block">
                                <h3 class="CorouselTitle">@item.Title</h3>
                                <p class="CorouselText">@item.Text</p>
                            </div>
                        </div>
                    }
                }
            </div>

        </div>
    </div>
    <div class=" col-lg 4 col-md-12 col-sm-12 wrapper vcenter-item" style="padding: 0px;">

        <div class="box">

            <form method="post">
                <div class="form-group mb-3 ">
                    <label asp-for="User.FirstName">First Name</label>
                    <input type="text" class="form-control" asp-for="User.FirstName" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter first Name" size="50" required>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="User.LastName">Last Name</label>
                    <input type="text" class="form-control" asp-for="User.LastName" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter last Name" required>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="User.Email">Email address</label>
                    <input type="email" class="form-control" asp-for="User.Email" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Email" required>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="User.PhoneNumber">Number</label>
                    <input type="number" class="form-control" asp-for="User.PhoneNumber" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Number" required>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="User.Password">Password</label>
                    <input type="password" class="form-control" asp-for="User.Password" id="exampleInputPassword1" placeholder="Password" required>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="User.ConfirmPassword">Confrim Password</label>
                    <input type="password" asp-for="User.ConfirmPassword" class="form-control" id="exampleInputPassword1" placeholder=" Confrim Password" required>
                </div>

                <span class="text-danger">@TempData["ErrorMes"]</span>

                <button type="submit" class="form-control rounded-pill btn btn-outline-warning">Register</button>
            </form>

            <div style="text-align: center;">
                <a asp-controller="Login" asp-action="LostPassword" class="link-dark">Login</a>

            </div>

            <div style="text-align: center; padding-top: 30%;">
                <a asp-controller="Policy" asp-action="Policy" class="link-dark">Privacy Policy</a>
            </div>

        </div>
    </div>
    <!-- endregion Form -->
</div>



